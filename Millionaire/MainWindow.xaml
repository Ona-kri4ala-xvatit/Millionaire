<Window x:Class="Millionaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Millionaire" d:DataContext="{d:DesignInstance Type=local:Data}"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel x:Name="stackPanelQuestions" Margin="10">
            <TextBlock Text="{Binding Question}"></TextBlock>
            <Button Content="{Binding Answer[0]}" Margin="0,10,0,0"></Button>
            <Button Content="{Binding Answer[1]}" Margin="0,5,0,0"></Button>
            <Button Content="{Binding Answer[2]}" Margin="0,5,0,0"></Button>
            <Button Content="{Binding Answer[3]}" Margin="0,5,0,0"></Button>
        </StackPanel>
    </Grid>
</Window>
